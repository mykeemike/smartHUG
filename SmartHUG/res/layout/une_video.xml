<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitreVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:text="@string/app_name"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/colNoir"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivMetaPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:src="@drawable/androidmarker" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTempsVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textColor="@color/colNoir"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvNbViewVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="TextView"
                android:textColor="@color/colNoir"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvDateVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/colNoir"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:maxLines="5"
        android:paddingLeft="2dp"
        android:text="TextView"
        android:textColor="@color/colNoir"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvIdVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colNoir"
        android:visibility="gone" />

</LinearLayout>